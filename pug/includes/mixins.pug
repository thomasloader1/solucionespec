mixin getListado(objLista)
    ul.list-unstyled
        each obj in objLista
            .d-flex.align-items-center
                if(obj.icon != "fas fa-circle")
                    img(src=`${obj.icon}`, alt="", width="30", height="30")
                else
                    i(class=`${obj.icon} fa-sm`)
                
                li.ml-2.my-3= obj.name 

mixin modal(content)
    <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    p= content
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

mixin card(title, image, description)
    div(class="col-md-6 col-sm-12 col-lg-12 col-12 mb-4")
        article
            .card.align-items-center
                .card-header
                    h2.card-tittle= title
                img(src=`../img/assets/${image}` class="card-img-top")
                div(class="card-body")
                    p.card-text= description
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">Ver Mas</button>
        
                
                
            
